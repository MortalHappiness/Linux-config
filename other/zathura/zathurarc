unmap +
unmap -
unmap =

map <C-=> zoom in
map <C--> zoom out

# highlight
set highlight-color "#00FF00"
set highlight-active-color "#FF0000"
set highlight-transparency 0.5

# zoom and scroll step size
set zoom-step 20
set scroll-step 80

# copy selection to system clipboard
set selection-clipboard clipboard

# enable incremental search
set incremental-search true
